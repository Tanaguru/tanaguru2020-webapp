# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# tab indent style to conform WordPress style
indent_style = tab
# 4 indent size to conform WordPress style
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{yml,xml}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4
